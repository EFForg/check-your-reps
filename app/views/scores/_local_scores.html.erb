<% if @scores.empty? %>
  Sorry, we couldn't find any information for <%= "#{@state}, District #{@district}" %>
<% else %>
  <h2>Your representatives</h2>
  <div class="your-zip">
    <%= "#{@state}, District #{@district}" %>
  </div>
  <div class="your-reps-grid">
    <% @scores.each do |score| %>
      <%= render score, locals: { score: score } %>
    <% end %>
  </div>
<% end %>
