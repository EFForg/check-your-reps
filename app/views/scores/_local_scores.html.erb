<% if @scores.empty? %>
  Sorry, we couldn't find any information for <%= full_district(@state, @district) %>
<% else %>
  <h2>Your representatives</h2>
  <div class="your-zip">
    <%= full_district(@state, @district) %>
  </div>
  <div class="your-reps-grid">
    <% @scores.each do |score| %>
      <%= render score, locals: { score: score } %>
    <% end %>
  </div>

  <script type="text/javascript">
    <%= render "ac_embed.js" %>
  </script>
  <%= javascript_include_tag "https://act.eff.org/action/embed" %>

  <a class="action-center-widget" href="https://act.eff.org/action/check-your-reps-tell-congress-to-save-the-open-internet-4ba1e32b-331c-4f40-acdf-717dd0a9f01e">Take part in the action!</a>
<% end %>
