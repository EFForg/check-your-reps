<div class="<%= score.position == "Yes" ? "your-reps-yes" : "your-reps-no" %>">
  <div class="your-rep">
    <%= congress_member_photo score.congress_member %>
    <div class="rep-name">
      <%= score.congress_member.name %>
    </div>
    <div class="position">
      <span>CRA position</span>
      <a href="<%= score.source_url %>">
        <%= score.position %>
      </a>
    </div>
  </div>
</div>
